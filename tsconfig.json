{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2022",
    "target": "es2022",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src"]
}
